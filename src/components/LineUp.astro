---
import TicketsButton from "./TicketsButton.astro";
import Artist from "./Artist.astro";
import { ARTISTS, ticketsNotAvailable } from "./Data";
---

<section class="mb-10 md:mb-0">
  <h2 class="text-center text-4xl text-3d font-goldman text-white">
    LINE UP (Pronto)
  </h2>
  <div class="mt-20 md:mt-32 space-y-8 px-5 lg:px-32 xl:px-40">
    <div class="flex justify-center gap-4">
      {
        ARTISTS.filter((artist) => artist.row === 1).map(
          ({ name, src, instagram }) => (
            <Artist name={name} src={src} instagram={instagram} />
          )
        )
      }
    </div>
    <div class="flex justify-center gap-4 mt-8">
      {
        ARTISTS.filter((artist) => artist.row === 2).map(
          ({ name, src, instagram }) => (
            <Artist name={name} src={src} instagram={instagram} />
          )
        )
      }
    </div>
  </div>
  <div class="flex justify-center mt-4">
    <TicketsButton
      phoneNumber="573187866592"
      message="Hola ! Quiero mi ticket para DSTEV Sessions #2"
      isNotAvailable={ticketsNotAvailable}
      text="Tickets"
    />
  </div>
</section>
