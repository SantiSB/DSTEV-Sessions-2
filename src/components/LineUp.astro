---
import TicketsButton from "./TicketsButton.astro";
import Artist from "./Artist.astro";
import { ARTISTS, ticketsNotAvailable } from "./Data";
---

<section id="lineUp" class="mb-10 md:mb-0">
  <h2 class="text-center text-4xl text-3d font-goldman text-white">LINE UP</h2>
  <div class="mt-20 md:mt-32 space-y-8 px-5 lg:px-32 xl:px-40">
    <!-- Versión web: Primera fila con 2 artistas -->
    <div class="hidden md:flex flex-wrap justify-center gap-4">
      {
        ARTISTS.slice(0, 2).map(({ name, src, instagram }) => (
          <Artist name={name} src={src} instagram={instagram} />
        ))
      }
    </div>
    <!-- Versión móvil: Primera fila con 1 artista -->
    <div class="flex md:hidden flex-wrap justify-center gap-4">
      {
        ARTISTS.slice(0, 1).map(({ name, src, instagram }) => (
          <Artist name={name} src={src} instagram={instagram} />
        ))
      }
    </div>
    <!-- Versión web: Segunda fila con 3 artistas -->
    <div class="hidden md:flex flex-wrap justify-center gap-4 mt-8">
      {
        ARTISTS.slice(2).map(({ name, src, instagram }) => (
          <Artist name={name} src={src} instagram={instagram} />
        ))
      }
    </div>
    <!-- Versión móvil: Segunda y tercera fila con 4 artistas -->
    <div class="flex md:hidden flex-wrap justify-center gap-4 mt-8">
      {
        ARTISTS.slice(1, 3).map(({ name, src, instagram }) => (
          <Artist name={name} src={src} instagram={instagram} />
        ))
      }
    </div>
    <div class="flex md:hidden flex-wrap justify-center gap-4 mt-8">
      {
        ARTISTS.slice(3).map(({ name, src, instagram }) => (
          <Artist name={name} src={src} instagram={instagram} />
        ))
      }
    </div>
  </div>
  <div class="flex justify-center mt-4">
    <TicketsButton
      phoneNumber="573187866592"
      message="Hola ! Quiero mi ticket para DSTEV Sessions #2"
      isNotAvailable={ticketsNotAvailable}
      text="Comprar Tickets"
    />
  </div>
</section>

<style>
  .flex-wrap {
    flex-wrap: wrap;
  }

  @media (min-width: 768px) {
    .flex-wrap {
      flex-wrap: nowrap;
    }
  }

  @media (max-width: 767px) {
    .w-1/2 {
      width: 100%;
    }
  }

  @media (min-width: 768px) {
    .w-1/2 {
      width: 50%;
    }
  }
</style>
