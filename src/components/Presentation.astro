---
import TicketsButton from "./TicketsButton.astro";
---

<main
  class="flex items-center justify-center min-h-screen"
  style="display: flex; align-items: center; justify-content: center; height: 100vh; margin-top: -10vh;"
>
  <div class="flex flex-col items-center justify-center w-full">
    <div
      class="justify-center rounded-3xl overflow-hidden p-5 bg-opacity-10 bg-black text-center text-3d"
    >
      <img
        src="/icons/DSTEV.png"
        class="h-10 sm:h-20 fill-current text-black"
        alt="DSTEV Logo"
      />
      <p class="text-4xl sm:text-6xl text-white drop-shadow-md font-goldman">
        Sessions #2
      </p>
      <p class="text-base sm:text-2xl text-white drop-shadow mt-5">
        Muy pronto
      </p>
    </div>
    <TicketsButton />
  </div>
</main>

<style>
  .text-3d {
    color: #fff;
    text-shadow:
      1px 1px 0 #000,
      2px 2px 0 #000,
      3px 3px 0 #000,
      4px 4px 0 #000;
  }
</style>
