---
import Background from "../components/Background.astro";
import Header from "../components/Header.astro";
import "@fontsource/goldman";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="DSTEV Sessions #2" content="DSTEV Sessions #2 - Sitio Oficial" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icons/DSTEV.svg" />
    <title>{title}</title>
  </head>
  <body style="">
    <Background />
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: "Goldman", system-ui;
    scroll-behavior: smooth;
  }
  body {
    margin: 0px;
    overflow: clip;
    background: black;
  }
</style>
