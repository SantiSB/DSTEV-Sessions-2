---
import Background from "../components/Background.jsx";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/goldman";
import "@fontsource/tektur";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="DSTEV Sessions #2"
      content="DSTEV Sessions #2 - Sitio Oficial"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icons/DSTEV.svg" />
    <title>{title}</title>
  </head>
  <body style="">
    <Background client:load />
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: "Tektur", "Goldman", system-ui;
    scroll-behavior: smooth;
  }
  body {
    margin: 0px;
    background: black;
  }
</style>
